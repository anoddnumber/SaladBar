<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageButtonsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/broccoli"
            android:contentDescription="@string/imageButtonDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickItem"
            android:src="@drawable/broccoli" />
        
        <ImageButton
            android:id="@+id/lettuce"
            android:contentDescription="@string/imageButtonDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickItem"
            android:src="@drawable/lettuce" />
        
        <ImageButton
            android:id="@+id/spinach"
            android:contentDescription="@string/imageButtonDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickItem"
            android:src="@drawable/spinach" />
        
        <ImageButton
            android:id="@+id/imageButton3"
            android:contentDescription="@string/imageButtonDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickItem"
            android:src="@drawable/broccoli" />

</LinearLayout>
